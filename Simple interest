# Simple Interest Calculator in Python
def calculate_simple_interest(principal, rate, time):
  return (principal * rate * time)/ 100 

principal = int(input("Enter the principal amount (1000): "))
rate = int(input("Enter the rate of interest (.05): "))
time = int(input("Enter the time period in years (2): "))

simple_interest = (principal * rate * time) // 100

print(f"The calculated simple interest is: {simple_interest}")
